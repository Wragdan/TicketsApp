<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="tickets.LoginAdminPage" Title="Login" Icon="baseline_settings_black_36pt">
    <ContentPage.Resources>
        <StyleSheet Source="../styles/style.css">
        </StyleSheet>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand" Margin="10,20,10,10" BackgroundColor="{DynamicResource backgroundColor}">
            <Label Text="Usuario:" Font="Bold, 24"/>
			<Entry x:Name="usernameEntry" Placeholder="Usuario" />
            <Label Text="Contraseña:" Font="Bold, 24"/>
			<Entry x:Name="passwordEntry" Placeholder="Contraseña" IsPassword="true" />
            <Label x:Name="messageLabel" Font="Bold, 24"/>
            <StackLayout VerticalOptions="EndAndExpand">
                <Button Text="Login" class="btn_blue" Clicked="OnLoginButtonClicked" />
            </StackLayout>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>