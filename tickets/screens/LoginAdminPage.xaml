<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="tickets.LoginAdminPage" 
    Title="Login">
    <ContentPage.Resources>
        <StyleSheet Source="../styles/style.css">
        </StyleSheet>
    </ContentPage.Resources>
    <ContentPage.Content>
		<StackLayout VerticalOptions="StartAndExpand">
			<Label Text="Todavia no tienes usuario?" />
			<Button Text="Crear Cuenta" Clicked="SignInButtonClicked" />
			<Label Text="Usuario:" />
			<Entry x:Name="usernameEntry" Placeholder="Usuario" />
			<Label Text="Contraseña:" />
			<Entry x:Name="passwordEntry" Placeholder="Contraseña" IsPassword="true" />
			<Label x:Name="messageLabel" />
            <Button Text="Login" class="btn_blue" Clicked="OnLoginButtonClicked" />
            <Button Text="Cancelar" class="btn_red" Clicked="OnCancelTouched" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>